## Core
NODE_ENV=development
PORT=5013
MONGODB_URI=mongodb://localhost:27017/medagg
JWT_SECRET=change_me

## Integrations trigger auth (server-to-server)
# Used for POST /api/v1/integrations/meta/sync
INTEGRATIONS_SYNC_KEY=change_me_long_random

## Meta Lead Ads Sync
META_SYNC_ENABLED=false
META_SYNC_CRON=*/10 * * * *
META_SYNC_RUN_ON_START=false

# Graph API configuration
META_GRAPH_VERSION=v19.0
META_ACCESS_TOKEN=__SET_IN_ENV_ONLY__

# Comma-separated list of ad accounts (with or without "act_")
META_AD_ACCOUNT_IDS=act_1234567890,act_2345678901

# Optional allowlist of form IDs (comma-separated). If set, only these forms will be synced.
META_FORM_IDS=

# Pagination page size for /{FORM_ID}/leads (max varies; 100 is a safe default)
META_SYNC_PAGE_LIMIT=100

# Only scan ads with these effective statuses (JSON array)
META_AD_EFFECTIVE_STATUS=["ACTIVE"]

